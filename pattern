import java.util.*;
public class Pattern{
public static void main(String[] args){
int n,i,j,k=1,count,tot=0;
Scanner s=new Scanner(System.in);
System.out.print("Enter a number:");
n=s.nextInt();
for(i=1;i<=n;i++)
tot=tot+i;
for(i=1;i<=n;i++){
if(i>1)
tot=tot-i;
count=0;
for(j=tot;count<i;j++){
System.out.print(j+" ");
count++;
}
System.out.println();}
}}
/*
Sample output1:
Enter a number:3
6
4 5
1 2 3  

Sample output2:
Enter a number:5
15
13  14
10  11  12
6  7  8  9
1 2  3 4 5*/

